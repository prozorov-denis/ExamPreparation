<UserControl x:Class="ExamPreparation.UserControls.ModuleCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExamPreparation.UserControls"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="120" d:DesignWidth="450">
    <Grid>
        <materialDesign:Card Padding="8">
            <StackPanel>
                
                <TextBlock Style="{StaticResource MaterialDesignSubtitle1TextBlock}" FontWeight="Bold" Text="Module"/>

                <TextBlock Margin="0, 8, 0, 0" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" Text="Theme"/>

                <StackPanel Orientation="Horizontal" Margin="0, 8, 0, 0">
                    <Button Style="{DynamicResource MaterialDesignFlatButton}">Теория</Button>
                    <Button Style="{DynamicResource MaterialDesignFlatButton}">Задания</Button>
                    <Button Style="{DynamicResource MaterialDesignFlatButton}">Контроль</Button>
                </StackPanel>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</UserControl>
